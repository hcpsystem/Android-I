<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pe.edu.tecsup.LinearLayoutActivity">

    <TextView
        android:text="Nombres completos:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/mitexto"
        android:textColor="#FFAB45"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:hint="Tu nombre"
        android:inputType="textNoSuggestions"
        android:layout_width="132dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/mitexto2"
        android:textSize="20sp"
        android:hint="Tu password"
        android:inputType="textPassword"
        android:layout_width="132dp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Pantallas de PC"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/descripcion"
        android:background="#B2EBF2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/apple"
            android:src="@drawable/apple"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="100dp" />

        <ImageView
            android:src="@drawable/windows"
            android:paddingLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
